<div class="coleccion-custom {% if class != blank %}{{ class }}{% endif %}">

    <div class="grid-coleccion">
        {% for product in collections[nameColection].products limit: 4 %}

            <div class="item">
                <a href="{{ product.url }}">
                    <div class="img-container">
                        <img src="{{ product.featured_image | img_url: 'master', format: 'pjpg' }}" alt="{{ product.featured_image.alt }}">
                    </div>
                </a>

                <div class="titulo">
                    <h3>{{ product.title }}</h3>
                </div>

               {% include 'product-price-custom', variant: product %}
            </div>

        {% endfor %}
    </div>

    <div class="btn-coleccion">
        <a href="{{ collections[nameColection].url }}">Ver Todos</a>
    </div>
</div>